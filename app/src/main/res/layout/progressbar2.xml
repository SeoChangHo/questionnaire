<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questionnaire_progress_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/triangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/common"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mental"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="공통"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mental"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cognitive"
        app:layout_constraintStart_toEndOf="@+id/common"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mental_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="우울증"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cognitive"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/elderly"
        app:layout_constraintStart_toEndOf="@+id/mental"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cognitive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="인지기능"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/elderly"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exercise"
        app:layout_constraintStart_toEndOf="@+id/cognitive"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/elderly_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="노인기능"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/exercise"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nutrition"
        app:layout_constraintStart_toEndOf="@+id/elderly"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exercise_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="운동"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/nutrition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/smoking"
        app:layout_constraintStart_toEndOf="@+id/exercise"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nutrition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="영양"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/smoking"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/drinking"
        app:layout_constraintStart_toEndOf="@+id/nutrition"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/smoking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="흡연"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/drinking"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oral"
        app:layout_constraintStart_toEndOf="@+id/smoking"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/drinking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="음주"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/oral"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancer"
        app:layout_constraintStart_toEndOf="@+id/drinking"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/oral_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="구강"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cancer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oral"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cancer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressGray"
            android:textSize="16dp"
            android:text="암"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/questionnaire_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/progress_shape2"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="@+id/questionnaire_progressbg"
        app:layout_constraintBottom_toBottomOf="@+id/questionnaire_progressbg"
        app:layout_constraintStart_toStartOf="@id/questionnaire_progressbg"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/questionnaire_progressbg"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/progress_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>